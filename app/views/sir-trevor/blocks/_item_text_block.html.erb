<%- document = get_solr_response_for_doc_id(block.values).last -%>
<div class="item-text">
  <div class="image-block pull-<%= block['text-align'] %>">
    <%- if has_thumbnail? document -%>
      <div class="thumbnail">
        <%= render_thumbnail_tag(document, {}, document_counter: -1) %>
      </div>
    <%- end -%>
    <%- if should_render_record_thumbnail_title?(document, block) -%>
      <div class="title">
        <%= document_heading(document) %>
      </div>
    <%- end -%>
  </div>
  <%= sir_trevor_markdown block["text"] %>
</div>
