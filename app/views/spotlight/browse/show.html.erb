<% set_html_page_title @search.title %>
  <div class="media row">
    <%= image_tag @search.featured_image, class: 'col-md-3' %>
    <div class="media-body col-md-9">
      <h1 class="media-heading"><%= @search.title %></h1>
      <small class="item-count"><%= t :'spotlight.browse.search.item_count', count: @search.count %></small>
      <p><%= @search.long_description %></p>
    </div>
  </div>

<div class="col-md-9 col-md-offset-3">
  <%= render 'sort_and_per_page' %>
  <%= render_document_index(@document_list) %>
  <%= render 'results_pagination' %>
</div>
