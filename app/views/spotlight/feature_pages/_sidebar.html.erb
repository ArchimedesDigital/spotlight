<div id="sidebar" class="col-md-3" role="complementary">
  <h4><%= @page.title %></h4>
  <ul class="nav sidenav">
    <% @page.child_pages.published.each do |page| %>
      <li class="<%= 'active' if current_page? page %>"><%= link_to_unless_current page.title, page %></li>
    <% end %>
  </ul>
</div>
