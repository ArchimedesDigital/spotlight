<%= render 'spotlight/shared/curation_sidebar' %>
<div id="content" class="col-md-9">
  <% @page_title = t(:'spotlight.curation.tags.title') %>

  <h1><%= t :'spotlight.curation.header' %></h1>
  <h2 class="text-muted"><%= t :'spotlight.curation.tags.header' %></h2>

  <table class="table table-striped">
    <thead>
      <th>Name</th>
      <th>Items tagged</th>
      <%# TODO last used? %>
      <th>Actions</th>
    </thead>
    <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%=tag.name %></td>
        <td><%= tag.taggings.count %></td>
        <td><%= link_to "Delete tag", exhibit_tag_path(@exhibit, tag), method: 'delete', class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
