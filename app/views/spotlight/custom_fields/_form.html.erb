<div id="content" class="col-md-9">
  <%= bootstrap_form_for @custom_field.new_record? ? [current_exhibit, @custom_field] : @custom_field, style: :horizontal, right: "col-sm-7", html: {id: 'edit-search'} do |f| %>

  <h1><%= t('spotlight.curation.header') %></h1>
  <h2 class="text-muted"><%= t('spotlight.curation.custom_fields.header') %></h2>
  <%= f.text_field :label %>
  <%= f.text_area :short_description %>
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-4">
      <%= link_to t(:"cancel"), exhibit_edit_metadata_path(current_exhibit), class: "btn btn-default" %>
      <%= f.submit nil %>
    </div>
  </div>
<% end %>
