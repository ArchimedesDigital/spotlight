<% item_grid_block.with_solr_helper(self) %>
<% block_objects = item_grid_block.block_objects %>
<div class="content-block item-grid-block row">
  
  <div class="items-col col-md-9 pull-<%= item_grid_block.text_align %>">
    <% if block_objects.present? %>
        <% block_objects.each_with_index do |block_object, index| %>
          <div class="box item-<%= index %>" data-id="<%= block_object.id %>">
            <% document = block_object.solr_document %>
            <% if (block_thumb = block_object.thumbnail).present? %>
              <div class="thumbnail"><%= link_to_document(document, image_tag(block_thumb), counter: -1) %></div>
            <% elsif has_thumbnail? document %>
              <div class="thumbnail"><%= render_thumbnail_tag(document, {}, document_counter: -1) %></div>
            <% end %>
          </div>
        <% end %>
    <% end %>
  </div>

  <div class="text-col col-md-3">
    <h3><%= item_grid_block.title %></h3>
    <%= sir_trevor_markdown item_grid_block.text %>
  </div>
</div>
